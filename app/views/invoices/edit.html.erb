<h2><%= l(:label_invoice_edit) %></h2>

<%= labelled_form_for :invoice, @invoice, :url => {:action => 'update', :id => @invoice.id}, :html => { :multipart => true, :method => :put, :id => 'invoice_form'} do |f|  %> 
  <%= render :partial => 'form', :locals => {:f => f}  %> 
  <%= submit_tag l(:button_save) -%>
<% end -%>

<% content_for :header_tags do %>
  <%= javascript_include_tag :contacts_invoices, :plugin => 'redmine_contacts_invoices'  %>
	<%= stylesheet_link_tag :contacts_invoices, :plugin => 'redmine_contacts_invoices' %>
	<%= javascript_include_tag :contacts, :plugin => 'redmine_contacts'  %>
	<%= stylesheet_link_tag :contacts, :plugin => 'redmine_contacts' %>
<% end %>
